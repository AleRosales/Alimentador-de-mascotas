<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/banner_width"
        android:layout_height="@dimen/banner_height"
        android:src="@drawable/banner_menu"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">
        <Button
            android:id="@+id/BTalimentar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/anchoBT_menu"
            android:background="@color/colorBoton"
            android:text="Alimentar"
            android:textSize="@dimen/texto"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:padding="@dimen/padding_BT"/>
        <Button
            android:id="@+id/BTalarma"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/anchoBT_menu"
            android:background="@color/colorBoton"
            android:text="Alarma"
            android:textSize="@dimen/texto"

            android:padding="@dimen/padding_BT"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">
        <Button
            android:id="@+id/BThistorial"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/anchoBT_menu"
            android:background="@color/colorBoton"
            android:text="Historial"
            android:textSize="@dimen/texto"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:padding="@dimen/padding_BT"/>
        <Button
            android:id="@+id/BTconf"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/anchoBT_menu"
            android:background="@color/colorBoton"
            android:text="Configuracion"
            android:textSize="@dimen/texto"
            android:padding="@dimen/padding_BT"/>
    </LinearLayout>
    <Button
        android:id="@+id/BTsalir"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/anchoBT_menu"
        android:background="@color/colorBoton"
        android:text="Salir"
        android:textSize="@dimen/texto"
        android:padding="@dimen/padding_BT"/>
</LinearLayout>
