<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="eestn1.rosales.alejandro.alimentador_final.HistorialActivity"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:weightSum="10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/texto_titulos"
        android:text="@string/historial_titulo"
        android:gravity="center"/>
    <view
        class="android.view.View"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:background="@color/negro"/>
    <!--Cabecera-->
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/cabecera"
        android:gravity="center"
        android:background="@color/colorBoton">
        <view
            class="android.view.View"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/negro"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Hora"
            android:gravity="end"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Fecha"/>
        <TextView
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Cant."
            android:textSize="20sp"/>
        <view
            class="android.view.View"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/negro"/>
    </LinearLayout>
    <view
        class="android.view.View"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:background="@color/negro"/>
    <!--Lista-->
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:background="@color/colorBoton">
        <view
            class="android.view.View"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/negro"/>
        <ListView
            android:id="@+id/lista"
            android:layout_width="254dp"
            android:layout_height="match_parent">
        </ListView>
        <view
            class="android.view.View"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/negro"/>
    </LinearLayout>
    <view
        class="android.view.View"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:background="@color/negro"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
    <Button
            android:id="@+id/BTactulizar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/anchoBT_menu"
            android:text="Actualizar"
            android:background="@color/colorBoton"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:padding="@dimen/padding_BT"/>
        <TextView
            android:id="@+id/TVultimAct"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/anchoBT_menu"
            android:text="Ultima vez: nunca"
            android:padding="@dimen/padding_BT"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/BTborrarH"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/anchoBT_menu"
            android:text="Borrar historial"
            android:background="@color/colorBoton"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:padding="@dimen/padding_BT"/>
        <Button
            android:id="@+id/BTatras"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/anchoBT_menu"
            android:text="Atras"
            android:background="@color/colorBoton"
            android:padding="@dimen/padding_BT"/>
    </LinearLayout>
</LinearLayout>